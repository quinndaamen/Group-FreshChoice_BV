@model FreshChoice.Services.Shift.Models.ShiftModel
@using FreshChoice.Data
@using FreshChoice.Data.Entities

<div class="container-page">
    <h2>Edit Shift</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Start Time</label>
            <input asp-for="StartTime" type="time" class="form-control" />
        </div>

        <div class="form-group">
            <label>End Time</label>
            <input asp-for="EndTime" type="time" class="form-control" />
        </div>

        <div class="form-group">
            <label>Department</label>
            <select asp-for="Department" class="form-control">
                @foreach (Department d in Enum.GetValues(typeof(Department)))
                {
                    <option value="@d" selected="@(Model.Department == d ? "selected" : null)">@d</option>
                }
            </select>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
.container-page { width: 60%; margin: 50px auto; font-family: Arial, sans-serif; }
.form-group { margin-bottom: 15px; }
.form-control { width: 100%; padding: 10px; border-radius: 7px; border:2px solid #ccc; }
.form-buttons { margin-top: 20px; text-align:center; }
.btn-success { padding:10px 20px; border-radius:7px; border:none; color:white; background:#198754; font-weight:bold; }
.btn-success:hover { background:#157347; }
.btn-secondary { padding:10px 20px; border-radius:7px; border:2px solid #ccc; background:#f0f0f0; font-weight:bold; color:black; }
.btn-secondary:hover { background:#e0e0e0; }
</style>