@model FreshChoice.Services.Shift.Models.ShiftModel
@using FreshChoice.Data
@using FreshChoice.Data.Entities

@{
    // Format dates and times properly for input fields
    var dateValue = Model.Date.ToString("yyyy-MM-dd");
    var startTimeValue = Model.StartTime.ToLocalTime().ToString("HH:mm");
    var endTimeValue = Model.EndTime.ToLocalTime().ToString("HH:mm");
}

<link rel="stylesheet" href="~/css/universal-forms.css" />

<div class="form-container">
    <div class="header centered">
        <h2>Edit Shift</h2>
        <p>Update shift details</p>
    </div>

    <div class="universal-form">
        <form asp-action="Edit" method="post" id="shiftForm">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <!-- Date -->
            <div class="form-field">
                <label asp-for="Date">
                    Date
                    <span class="required">*</span>
                </label>
                <input asp-for="Date" type="date" class="form-control-custom" value="@dateValue" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Time Fields Row -->
            <div class="form-row">
                <!-- Start Time -->
                <div class="form-field">
                    <label asp-for="StartTime">
                        Start Time
                        <span class="required">*</span>
                    </label>
                    <input asp-for="StartTime" type="time" class="form-control-custom" value="@startTimeValue" required />
                    <small class="form-text">Store hours: 08:00 - 22:00</small>
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <!-- End Time -->
                <div class="form-field">
                    <label asp-for="EndTime">
                        End Time
                        <span class="required">*</span>
                    </label>
                    <input asp-for="EndTime" type="time" class="form-control-custom" value="@endTimeValue" required />
                    <small class="form-text">Store hours: 08:00 - 22:00</small>
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>

            <!-- Department -->
            <div class="form-field">
                <label asp-for="Department">
                    Department
                    <span class="required">*</span>
                </label>
                <select asp-for="Department" class="form-control-custom">
                    <option value="">-- Select Department --</option>
                    @foreach (Department d in Enum.GetValues(typeof(Department)))
                    {
                        <option value="@d">@d</option>
                    }
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <!-- Form Actions -->
            <div class="form-buttons">
                <a asp-action="Index" class="btn-secondary">
                    <i class="bi bi-x-lg"></i>
                    Cancel
                </a>
                <button type="submit" class="btn">
                    <i class="bi bi-check-lg"></i>
                    Update Shift
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}