@model IEnumerable<FreshChoice.Services.Shift.Models.ShiftModel>
@using FreshChoice.Data.Entities

<div class="container-page">
    <h2>Employee Shifts</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Add Shift</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                <th>Total Time</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in Model)
            {
                <tr>
                    <td>@shift.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>@shift.StartTime.ToLocalTime().ToString("HH:mm")</td>
                    <td>@shift.EndTime.ToLocalTime().ToString("HH:mm")</td>
                    <td>@shift.TotalTime</td>
                    <td>@shift.Department</td>
                    <td>
                        <a asp-action="Edit" asp-route-shiftId="@shift.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-shiftId="@shift.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
.container-page { width: 80%; margin: 50px auto; font-family: Arial, sans-serif; }
.table { width: 100%; border-collapse: collapse; }
.table th, .table td { padding: 10px; border: 1px solid #ccc; text-align: center; }
.btn { padding: 8px 16px; border-radius: 5px; border: none; font-weight: bold; cursor: pointer; }
.btn-success { background-color: #198754; color: white; }
.btn-success:hover { background-color: #157347; }
.btn-primary { background-color: #0d6efd; color: white; }
.btn-primary:hover { background-color: #0b5ed7; }
.btn-danger { background-color: #dc3545; color: white; }
.btn-danger:hover { background-color: #bb2d3b; }
.mb-3 { margin-bottom: 15px; }
</style>
