@using FreshChoice.Data
@using FreshChoice.Data.Entities
@model IEnumerable<EmployeeShift>

<div class="container-page">
    <div class="header">
        <h2>Employee Schedule</h2>
        <p>Overview of all assigned shifts</p>
        <a asp-action="Create" class="btn btn-success">+ Add Shift</a>
    </div>

    <table class="schedule-table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Department</th>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@($"{item.Employee.FirstName} {item.Employee.LastName}")</td>
                    <td>
                        <span class="dept-label @((Department)item.DepartmentId)">
                            @((Department)item.DepartmentId)
                        </span>
                    </td>
                    <td>@item.Shift.Date.ToString("dd-MM-yyyy")</td>
                    <td>@item.Shift.StartTime.ToString("HH:mm")</td>
                    <td>@item.Shift.EndTime.ToString("HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
.container-page { width: 80%; margin: 90px auto; font-family: Arial, sans-serif; }
.header h2 { margin-bottom: 5px; display: inline-block; }
.header p { margin-bottom: 10px; color: #555; display:inline-block; margin-left:10px; }
.btn-success { margin-left: 20px; }
.schedule-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
.schedule-table th, .schedule-table td { border: 2px solid #ccc; padding: 10px; text-align: center; border-radius: 6px; }
.schedule-table th { background-color: #f0f0f0; }
.schedule-table tr:nth-child(even) { background-color: #fafafa; }

/* Department colors */
.dept-label.Bakery { background-color: #f4d03f; padding: 4px 8px; border-radius: 5px; }
.dept-label.Butchery { background-color: #e74c3c; padding: 4px 8px; border-radius: 5px; color:white; }
.dept-label.Cashier { background-color: #2ecc71; padding: 4px 8px; border-radius: 5px; color:white; }
.dept-label.Cleaner { background-color: #3498db; padding: 4px 8px; border-radius: 5px; color:white; }
.dept-label.Stockers { background-color: #9b59b6; padding: 4px 8px; border-radius: 5px; color:white; }
.dept-label.Supervisor { background-color: #34495e; padding: 4px 8px; border-radius: 5px; color:white; }
</style>
