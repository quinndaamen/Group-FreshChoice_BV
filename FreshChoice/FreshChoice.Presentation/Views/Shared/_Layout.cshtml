<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FreshChoice.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/FreshChoice.Presentation.styles.css" asp-append-version="true"/>
</head>

<body>
    <header>
        <nav class="top-navbar">
            <div class="navbar-left">
                <div class="logo-dropdown">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="FreshChoice Logo" class="navbar-logo">
                    </a>
                    <div class="dropdown-content">
                        <a href="/EmployeeSchedule/Index">
                            <i class="bi bi-calendar"></i>
                            <span>Schedule</span>
                        </a>
                        <a href="/EmployeeManagement/Index">
                            <i class="bi bi-people"></i>
                            <span>Employee Management</span>
                        </a>
                        <a href="/Item/Index">
                            <i class="bi bi-box-seam"></i>
                            <span>Inventory</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="navbar-right">
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="footer-content">
            &copy; 2025 - FreshChoice.Presentation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
