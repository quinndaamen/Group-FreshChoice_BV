@model IEnumerable<FreshChoice.Services.EmployeeManagement.Models.EmployeeModel>

<body>
    <div class="container-page">
        <div class="header">
            <div class="text">
                <h2>Employee Management</h2>
                <p>Manage all employees</p>
            </div>
            <div class="con-button">
                <a asp-action="Create">
                    <div class="addbutton"><i class="bi bi-person-plus"></i> Add Employee</div>
                </a>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@employee.Id"><i class="bi bi-eye"></i></a> |
                            <a asp-action="Edit" asp-route-id="@employee.Id"><i class="bi bi-pencil-square"></i></a> |
                            <form asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display:inline;">
                                <button type="submit"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <style>
        body {
            margin: 20px;
            margin-top: 90px;
            font-family: Arial, sans-serif;
        }

        .container-page {
            width: 90%;
            margin: 0 auto; /* center the content */
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .header .text h2 {
            margin: 0;
        }

        .addbutton {
            background-color: black;
            color: white;
            border: 4px solid black;
            padding: 10px 15px;
            border-radius: 7px;
            text-decoration: none;
            display: inline-block;
        }

        .addbutton:hover {
            background-color: #212121;
            border: 4px solid #212121;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 10px;
            overflow: hidden;
            border: 2px solid gray;
        }

        table th, table td {
            text-align: center;
            padding: 10px;
            border-bottom: 2px solid gray;
        }

        table th {
            background-color: #f8f8f8;
        }

        table tbody tr:hover {
            background-color: #f5f5f5;
        }

        td button {
            border: 2px solid lightgray;
            border-radius: 10px;
            color: red;
            background-color: #fff;
            padding: 4px 8px;
            cursor: pointer;
        }
    </style>
</body>
