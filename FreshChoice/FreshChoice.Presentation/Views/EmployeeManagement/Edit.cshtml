@model FreshChoice.Services.EmployeeManagement.Models.EmployeeModel

<div class="container-page">
    <div class="header">
        <h2>Edit Employee</h2>
        <p>Update the employee details below</p>
    </div>

    <form id="editForm" asp-action="Edit" method="post" style="margin-left:5%; margin-right:5%; margin-top:20px;">
        <input type="hidden" asp-for="Id" />

        <div class="form-field" style="margin-bottom:20px;">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control-custom" />
        </div>

        <div class="form-field" style="margin-bottom:20px;">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control-custom" />
        </div>

        <div class="form-field" style="margin-bottom:20px;">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control-custom" />
        </div>

        <div class="form-buttons" style="text-align:center; margin-top:30px;">
            <button type="submit" class="addbutton"><i class="bi bi-check-lg"></i> Save</button>
            <a asp-action="Index" class="addbutton cancel-btn">Cancel</a>
        </div>
    </form>
</div>

<style>
    body {
        margin: 20px;
        margin-top: 90px;
        font-family: Arial, sans-serif;
    }

    .container-page {
        width: 60%;
        margin: 0 auto;
    }

    .header h2 {
        margin-bottom: 5px;
    }

    .header p {
        margin-bottom: 20px;
        color: #555;
    }

    .form-field {
        margin-bottom: 15px;
    }

    .form-control-custom {
        width: 100%;
        padding: 10px 12px;
        border-radius: 7px;
        border: 2px solid gray;
        transition: border 0.2s, box-shadow 0.2s;
    }

    .form-control-custom:focus {
        border-color: #000;
        box-shadow: 0 0 5px rgba(0,0,0,0.1);
        outline: none;
    }

    .addbutton {
        background-color: black;
        color: white;
        border: 2px solid black;
        padding: 10px 20px;
        border-radius: 7px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        margin-right: 10px;
    }

    .addbutton:hover {
        background-color: #212121;
        border-color: #212121;
    }

    .cancel-btn {
        background-color: #ccc;
        color: black;
        border: 2px solid #aaa;
    }

    .cancel-btn:hover {
        background-color: #bbb;
        border-color: #999;
    }
</style>
