@model FreshChoice.Services.EmployeeManagement.Models.EmployeeModel

<link rel="stylesheet" href="~/css/universal-forms.css" />
<link rel="stylesheet" href="~/css/custom-dropdown.css" />

<div class="container-page form-container">
    <div class="header centered">
        <h2>Edit Employee</h2>
        <p>Update employee information below</p>
    </div>

    <form asp-action="Edit" method="post" class="universal-form" data-autosave="edit-employee-@Model.Id">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
        
        <input type="hidden" asp-for="Id" />

        <!-- Personal Information -->
        <div class="form-section">
            <h3 class="form-section-title">Personal Information</h3>
            
            <div class="form-row">
                <div class="form-field">
                    <label asp-for="FirstName">First Name <span class="required">*</span></label>
                    <input asp-for="FirstName" class="form-control-custom" placeholder="Enter first name" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="LastName">Last Name <span class="required">*</span></label>
                    <input asp-for="LastName" class="form-control-custom" placeholder="Enter last name" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-field">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-control-custom" placeholder="employee@freshchoice.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <small class="form-text">Optional but recommended for notifications</small>
                </div>

                <div class="form-field">
                    <label asp-for="PhoneNumber">Phone Number <span class="required">*</span></label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control-custom" placeholder="+359 888 123 456" required />
                    <small class="form-text">Include country code (e.g., +359 for Bulgaria)</small>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Employment Details -->
        <div class="form-section">
            <h3 class="form-section-title">Employment Details</h3>
            
            <div class="form-row">
                <div class="form-field">
                    <label asp-for="Role">Role <span class="required">*</span></label>
                    <div class="custom-dropdown full-width">
                        <select asp-for="Role" class="form-control-custom" required>
                            <option value="">Select a role</option>
                            <option value="Administrator">Administrator</option>
                            <option value="Manager">Manager</option>
                            <option value="Employee">Employee</option>
                        </select>
                    </div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="WagePerHour">Hourly Wage <span class="required">*</span></label>
                    <div class="input-with-prefix">
                        <span class="input-prefix">€</span>
                        <input asp-for="WagePerHour" type="number" step="0.01" min="0" class="form-control-custom with-prefix" placeholder="22.00" autocomplete="off" required />
                    </div>
                    <span asp-validation-for="WagePerHour" class="text-danger"></span>
                    <small class="form-text">Enter hourly rate in euros</small>
                </div>
            </div>

            <div class="form-field">
                <label asp-for="HireDate">Hire Date <span class="required">*</span></label>
                <input asp-for="HireDate" type="date" class="form-control-custom" required />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Shifts Info (Read-only) -->
        @if (Model.Shifts != null && Model.Shifts.Any())
        {
            <div class="form-section">
                <h3 class="form-section-title">Assigned Shifts</h3>
                <div class="alert alert-info">
                    <i class="bi bi-calendar-check"></i>
                    This employee currently has @Model.Shifts.Count shift(s) assigned.
                </div>
            </div>
        }

        <!-- Password Update (Optional) -->
        <div class="form-section">
            <h3 class="form-section-title">Update Password (Optional)</h3>
            <p class="form-text" style="margin-bottom: 15px; color: #6b7280;">Leave blank to keep current password</p>
            
            <div class="form-field password-field">
                <label asp-for="Password">New Password</label>
                <input asp-for="Password" type="password" class="form-control-custom" placeholder="Enter new password" />
                <button type="button" class="password-toggle">
                    <i class="bi bi-eye"></i>
                </button>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-field password-field">
                <label asp-for="ConfirmPassword">Confirm New Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control-custom" placeholder="Re-enter new password" />
                <button type="button" class="password-toggle">
                    <i class="bi bi-eye"></i>
                </button>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn">
                <i class="bi bi-check-lg"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn-secondary">
                <i class="bi bi-x-lg"></i> Cancel
            </a>
        </div>
    </form>
</div>

<script src="~/js/employee-forms.js"></script>
<script src="~/js/custom-dropdown.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}