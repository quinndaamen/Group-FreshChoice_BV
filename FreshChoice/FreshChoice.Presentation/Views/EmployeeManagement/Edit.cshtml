@model FreshChoice.Services.EmployeeManagement.Models.EmployeeModel

<link rel="stylesheet" href="~/css/universal-forms.css" />

<body>
    <div class="container-page form-container">
        <div class="header centered">
            <h2>Edit Employee</h2>
            <p>Update employee information below</p>
        </div>

        <form asp-action="Edit" method="post" class="universal-form" data-autosave="edit-employee-@Model.Id">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            
            <input type="hidden" asp-for="Id" />

            <!-- Personal Information -->
            <div class="form-row">
                <div class="form-field">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control-custom" placeholder="Enter first name" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control-custom" placeholder="Enter last name" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-field">
                <label asp-for="Email">Email (Optional)</label>
                <input asp-for="Email" type="email" class="form-control-custom" placeholder="employee@freshchoice.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <small class="form-text">Email is optional but recommended for account notifications</small>
            </div>

            <!-- Shifts Info (Read-only) -->
            @if (Model.Shifts != null && Model.Shifts.Any())
            {
                <div class="form-section">
                    <h3 class="form-section-title">Assigned Shifts</h3>
                    <div class="alert alert-info">
                        <i class="bi bi-calendar-check"></i>
                        This employee currently has @Model.Shifts.Count shift(s) assigned.
                    </div>
                </div>
            }

            <!-- Password Update (Optional) -->
            <div class="form-section">
                <h3 class="form-section-title">Update Password (Optional)</h3>
                <p class="form-text" style="margin-bottom: 15px;">Leave blank to keep current password</p>
                
                <div class="form-field password-field">
                    <label asp-for="Password">New Password</label>
                    <input asp-for="Password" type="password" class="form-control-custom" placeholder="Enter new password" />
                    <button type="button" class="password-toggle">
                        <i class="bi bi-eye"></i>
                    </button>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-field password-field">
                    <label asp-for="ConfirmPassword">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control-custom" placeholder="Re-enter new password" />
                    <button type="button" class="password-toggle">
                        <i class="bi bi-eye"></i>
                    </button>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn">
                    <i class="bi bi-check-lg"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn-secondary">
                    <i class="bi bi-x-lg"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <script src="~/js/employee-forms.js"></script>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}