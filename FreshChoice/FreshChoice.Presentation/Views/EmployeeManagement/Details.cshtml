@model FreshChoice.Services.EmployeeManagement.Models.EmployeeModel

<div class="container-page">
    <div class="header">
        <h2>Employee Details</h2>
        <p>View employee information below</p>
    </div>

    <div class="details">
        <div class="detail-row">
            <span class="detail-label">First Name:</span>
            <span class="detail-value">@Model.FirstName</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Last Name:</span>
            <span class="detail-value">@Model.LastName</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Email:</span>
            <span class="detail-value">@Model.Email</span>
        </div>
    </div>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    body {
        margin: 20px;
        margin-top: 90px;
        font-family: Arial, sans-serif;
    }

    .container-page {
        width: 60%;
        margin: 0 auto;
    }

    .header h2 {
        margin-bottom: 5px;
    }

    .header p {
        margin-bottom: 20px;
        color: #555;
    }

    .details {
        background-color: #f9f9f9;
        border: 2px solid #ccc;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .detail-row {
        display: flex;
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        width: 150px;
        font-weight: bold;
        color: #333;
    }

    .detail-value {
        flex: 1;
        color: #555;
    }

    .form-buttons .btn {
        margin-right: 10px;
        padding: 10px 20px;
        border-radius: 7px;
        font-weight: bold;
        text-decoration: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border: 2px solid #ffc107;
        color: #212529;
    }
    .btn-warning:hover {
        background-color: #e0a800;
        border: 2px solid #e0a800;
        color: #212529;
    }

    .btn-secondary {
        background-color: #f0f0f0;
        border: 2px solid #ccc;
        color: black;
    }

    .btn-secondary:hover {
        background-color: #e0e0e0;
    }
</style>
