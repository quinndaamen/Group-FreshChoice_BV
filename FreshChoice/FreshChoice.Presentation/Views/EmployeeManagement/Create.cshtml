@model FreshChoice.Services.EmployeeManagement.Models.EmployeeModel

<body>
    <div class="container-page">
        <div class="header">
            <h2>Create Employee</h2>
            <p>Fill in employee details</p>
        </div>

        <form asp-action="Create" method="post" class="form-page">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Enter Password"/>
                        <label asp-for="Password">Password</label>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3" placeholder="Confirm Password"/>
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-save">Save</button>
                <a asp-action="Index" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .container-page {
            max-width: 600px;
            margin: 80px auto 40px auto;
            background-color: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .header h2 {
            margin-bottom: 5px;
            color: #222;
        }

        .header p {
            margin-bottom: 25px;
            color: #666;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 18px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border-radius: 8px;
            border: 2px solid #ccc;
            transition: border 0.2s;
        }

        .form-control:focus {
            border-color: #000;
            outline: none;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }

        .form-buttons {
            display: flex;
            justify-content: flex-start;
            margin-top: 25px;
        }

        .form-buttons .btn {
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .btn-save {
            background-color: #000;
            border: 2px solid #000;
            color: #fff;
            margin-right: 12px;
            box-shadow: 1px 1px 6px rgba(0,0,0,0.2);
        }

        .btn-save:hover {
            background-color: #212121;
            border-color: #212121;
            transform: translateY(-2px);
            box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        }

        .btn-cancel {
            background-color: #e0e0e0;
            border: 2px solid #ccc;
            color: #333;
        }

        .btn-cancel:hover {
            background-color: #d0d0d0;
            border-color: #bbb;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 3px;
            display: block;
        }

        .row .col-md-6 .form-floating input {
            padding: 12px 10px;
        }
    </style>
</body>
