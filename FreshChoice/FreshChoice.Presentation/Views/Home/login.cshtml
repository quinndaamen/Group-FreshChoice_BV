@page
@model FreshChoice.Presentation.Views.Home.login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>FreshChoice</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .login-container {
            max-width: 400px;
            margin: 50px auto;
            background-color: white;
            padding: 20px;
        }

        h1 {
            color: #000;
            font-size: 24px;
            margin: 0 0 10px 0;
            font-weight: normal;
        }

        h2 {
            color: #000;
            font-size: 18px;
            margin: 0 0 30px 0;
            font-weight: normal;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .separator {
            border-top: 1px solid #ccc;
            margin: 30px 0;
        }

        .login-button {
            background-color: #000;
            color: white;
            padding: 10px;
            border: none;
            width: 100%;
            font-size: 16px;
            cursor: pointer;
        }

        .forgot-password {
            text-align: center;
            margin-top: 15px;
        }

        .forgot-password a {
            color: #000;
            text-decoration: none;
        }
    </style>
</head>
<body>
<div class="login-container">
    <h1>FRESHCHOICE</h1>
    <h2>Login to Your Account</h2>
    <p>Enter your credentials to access your account</p>

    <div class="form-group">
        <label>Email</label>
        <input type="email" value="notreal@gmail.com">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" value="12345">
    </div>

    <div class="separator"></div>

    <button class="login-button">Login</button>

    <div class="forgot-password">
        <a href="#">Forgot Password?</a>
    </div>
</div>
</body>
</html>
