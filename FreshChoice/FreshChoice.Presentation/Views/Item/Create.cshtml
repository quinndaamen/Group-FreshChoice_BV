@model FreshChoice.Services.Item.Models.ItemModel

<link rel="stylesheet" href="~/css/universal-forms.css" />
<link rel="stylesheet" href="~/css/custom-dropdown.css" />

<div class="form-container">
    <div class="header centered">
        <h2>Add Product</h2>
        <p>Create a new product in your inventory</p>
    </div>

    <div class="universal-form">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <!-- Product Information Section -->
            <div class="form-section">
                <h3 class="form-section-title">Product Information</h3>

                <!-- Product Name -->
                <div class="form-field">
                    <label asp-for="Name">
                        Product Name
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Name" class="form-control-custom" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="form-field">
                    <label asp-for="Category">
                        Category
                        <span class="required">*</span>
                    </label>
                    <div class="custom-dropdown full-width">
                        <select asp-for="Category" class="form-control-custom">
                            <option value="">Select a category</option>
                            <option value="0">Dairy</option>
                            <option value="1">Bakery</option>
                            <option value="2">Produce</option>
                            <option value="3">Meat</option>
                            <option value="4">General</option>
                        </select>
                    </div>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <!-- Stock & Pricing Section -->
            <div class="form-section">
                <h3 class="form-section-title">Stock & Pricing</h3>

                <div class="form-row">
                    <!-- Quantity -->
                    <div class="form-field">
                        <label asp-for="Quantity">
                            Quantity
                            <span class="required">*</span>
                        </label>
                        <input asp-for="Quantity" type="number" class="form-control-custom" placeholder="0" min="0" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="form-field">
                        <label asp-for="Price">
                            Price
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-prefix">
                            <span class="input-prefix">€</span>
                            <input asp-for="Price" type="number" step="0.01" class="form-control-custom with-prefix" placeholder="0.00" min="0" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-buttons">
                <a asp-action="Index" class="btn-secondary">
                    <i class="bi bi-x-lg"></i>
                    Cancel
                </a>
                <button type="submit" class="btn">
                    <i class="bi bi-check-lg"></i>
                    Create Product
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/custom-dropdown.js"></script>
}