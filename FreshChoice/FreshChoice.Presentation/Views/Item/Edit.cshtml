@model FreshChoice.Services.Item.Models.ItemModel

<link rel="stylesheet" href="~/css/universal-forms.css" />

<body>
    <div class="container-page form-container">
        <div class="header centered">
            <h2>Edit Item</h2>
            <p>Update the product details below</p>
        </div>

        <form asp-action="Edit" method="post" class="universal-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            
            <input type="hidden" asp-for="Id" />

            <!-- Product Information -->
            <div class="form-field">
                <label asp-for="Name">Product Name</label>
                <input asp-for="Name" class="form-control-custom" placeholder="Enter product name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-field">
                    <label asp-for="Price">Price ($)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control-custom" placeholder="0.00" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Quantity">Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control-custom" placeholder="0" required />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn">
                    <i class="bi bi-check-lg"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn-secondary">
                    <i class="bi bi-x-lg"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}