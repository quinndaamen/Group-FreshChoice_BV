@model FreshChoice.Services.Item.Models.ItemModel

<div class="container">
    <div class="text">
        <h2>Edit Item</h2>
        <p>Update the product details below</p>
    </div>

    <form id="editForm" asp-action="Edit" method="post" style="margin-left:5%; margin-right:5%; margin-top:20px;">
        <input type="hidden" asp-for="Id" />

        <div class="form-field" style="margin-bottom:20px;">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control-custom" />
        </div>

        <div class="form-field" style="margin-bottom:20px;">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control-custom" />
        </div>

        <div class="form-field" style="margin-bottom:20px;">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control-custom" />
        </div>

        <div class="form-buttons" style="text-align:center; margin-top:30px;">
            <button type="submit" class="addbutton"><i class="bi bi-check-lg"></i> Save</button>
            <a asp-action="Index" class="addbutton cancel-btn">Cancel</a>
        </div>
    </form>
</div>

<style>
    .form-control-custom {
        width: 100%;
        padding: 10px 12px;
        border-radius: 7px;
        border: 2px solid gray;
        transition: border 0.2s, box-shadow 0.2s;
    }

    .form-control-custom:focus {
        border-color: #000;
        box-shadow: 0 0 5px rgba(0,0,0,0.1);
        outline: none;
    }

    .addbutton {
        background-color: black;
        color: white;
        border: 2px solid black;
        padding: 10px 20px;
        border-radius: 7px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        margin-right: 10px;
    }

    .addbutton:hover {
        background-color: #212121;
        border-color: #212121;
    }

    .cancel-btn {
        background-color: #ccc;
        color: black;
        border: 2px solid #aaa;
    }

    .cancel-btn:hover {
        background-color: #bbb;
        border-color: #999;
    }
</style>
