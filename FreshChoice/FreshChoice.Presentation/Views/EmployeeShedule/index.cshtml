@using FreshChoice.Data.Entities
@model IEnumerable<EmployeeShift>


<div class="container-page">
    <div class="header">
        <h2>Employee Schedule</h2>
        <p>Overview of all assigned shifts</p>
    </div>

    <table class="schedule-table">
        <thead>
        <tr>
            <th>Employee</th>
            <th>Department</th>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@($"{item.Employee.FirstName} {item.Employee.LastName}")</td>
                <td>@item.Department.Name</td>
                <td>@item.Shift.Date.ToString("dd-MM-yyyy")</td>
                <td>@item.Shift.StartTime.ToString("HH:mm")</td>
                <td>@item.Shift.EndTime.ToString("HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<style>
    .container-page {
        width: 80%;
        margin: 0 auto;
        margin-top: 90px;
        font-family: Arial, sans-serif;
    }

    .header h2 {
        margin-bottom: 5px;
    }

    .header p {
        margin-bottom: 20px;
        color: #555;
    }

    .schedule-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .schedule-table th, .schedule-table td {
        border: 2px solid #ccc;
        padding: 10px;
        text-align: center;
        border-radius: 6px;
    }

    .schedule-table th {
        background-color: #f0f0f0;
    }

    .schedule-table tr:nth-child(even) {
        background-color: #fafafa;
    }
</style>